include_rules

include suffix.tup

preload src

AGL = agl$(SUFFIX)$(LIB_EXT)
ifeq (@(TUP_PLATFORM),win32)
AGL += agl$(SUFFIX).exp
endif

: src/agl.o src/agl_private.o |> !so |> agl$(SUFFIX)$(SHARED_LIB_EXT) | $(AGL)

AGLR_OPENGL = aglr-opengl$(SUFFIX)$(LIB_EXT)
ifeq (@(TUP_PLATFORM),win32)
AGLR_OPENGL += aglr-opengl$(SUFFIX).exp
endif

: src/aglr_opengl.o src/agl_runtime.o src/agl_private.o |> !so |> aglr-opengl$(SUFFIX)$(SHARED_LIB_EXT) | $(AGLR_OPENGL)
