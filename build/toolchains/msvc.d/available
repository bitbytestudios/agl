#!/usr/bin/env bash

if [[ "`uname -s`" =~ "MINGW32_NT" ]]; then
  `./build/platforms/windows/mingw/VCInstallDir.sh 2>&1 1>/dev/null`
  if [ $? -ne 0 ]; then
    exit 1
  fi

  `./build/platforms/windows/mingw/WindowsSdkDir.sh 2>&1 1>/dev/null`
  if [ $? -ne 0 ]; then
    exit 1
  fi

  exit 0
else
  exit 1
fi
